@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <div class="title-box">
            <h1 style="text-align:center; padding-top:270px">Create Your Account</h1>
        </div>
    </div>
    <div class="col-md-6">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <h5>Personal Details</h5>
            <!-- TITLE Change from text field to drop down? -->
            <div style="display:flex">
                <div class="form-floating mb-3" style="width:40%; padding-right:10px">
                    <select asp-for="Input.Title" class="form-control" autocomplete="title" aria-required="true" placeholder="name@example.com">
                        <option value="rigatoni">Mr</option>
                        <option value="dave">Miss</option>
                        <option value="pumpernickel">Mrs</option>
                        <option value="reeses">Ms</option>
                        <option value="reeses">Dr</option>
                    </select>
                    <label asp-for="Input.Title">Title</label>
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
                <!-- FIRSTNAME -->
                <div class="form-floating mb-3" style="width:100%; padding-right:10px">
                    <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.FirstName">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <!-- LASTNAME -->
                <div class="form-floating mb-3" style="width:100%">
                    <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.LastName">Last Name</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div style="display:flex">
                <!-- DOB -->
                <div class="form-floating mb-3" style="width: 60%; padding-right: 10px">
                    <input asp-for="Input.Dob" type="date" class="form-control" autocomplete="dob" aria-required="true" placeholder="name@example.com" max="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" />
                    <label asp-for="Input.Dob">DOB</label>
                    <span asp-validation-for="Input.Dob" class="text-danger"></span>
                </div>
                <!-- PhoneNumber -->
                <div class="form-floating mb-3" style="width: 80%; padding-right: 10px">
                    <input type="tel" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" asp-for="Input.PhoneNumber" class="form-control" autocomplete="phoneNumber" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.PhoneNumber">Phone Number</label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <!-- EMAIL -->
                <div class="form-floating mb-3" style="width:100%">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-offset-2" style="display:flex">
                <div class="col-md-7">
                    <h5>Create a Password</h5>
                    <!-- PASSWORD -->
                    <div class="form-floating mb-3" style="width: 100%; padding-right: 10px">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <!-- PASSWORD CONFIRM -->
                    <div class="form-floating mb-3" style="width: 100%; padding-right: 10px">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-md-5" style="padding-top:30px">
                    <div class="password-box">
                        <h5>Password must contain:</h5>
                        <ul>
                            <li>At least 8 characters</li>
                            <li>1 capital letter</li>
                            <li>1 special character</li>
                        </ul>
                    </div>
                </div>
            </div>

            <hr />
            <h5>Address</h5>
            <!-- Address -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" autocomplete="address" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Address">Address</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div style="display:flex">
                <!-- Suburb -->
                <div class="form-floating mb-3" style="padding-right: 10px">
                    <input asp-for="Input.Suburb" class="form-control" autocomplete="suburb" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Suburb">Suburb</label>
                    <span asp-validation-for="Input.Suburb" class="text-danger"></span>
                </div>
                <!-- State Change from text field to drop down -->
                <div class="form-floating mb-3" style="padding-right: 10px">
                    <input asp-for="Input.State" class="form-control" autocomplete="state" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.State">State</label>
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                <!-- Postcode -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Postcode" class="form-control" autocomplete="postcode" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Postcode">Postcode</label>
                    <span asp-validation-for="Input.Postcode" class="text-danger"></span>
                </div>
            </div>






                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">Register</button>
        </form>
    </div>
